<Window x:Class="RegexStack_CodeRefactoringTool.CheckFiles"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Check files" Height="400" Width="800" MinWidth="800" MinHeight="100" Background="#FF282B34">
    <Grid>
        <ScrollViewer>
            <Grid Name="grid_FileCheck">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>

                <TextBlock Foreground="Aqua" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" FontWeight="Bold">File</TextBlock>
                <TextBlock Foreground="Aqua" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center">Check</TextBlock>

            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
